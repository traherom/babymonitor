<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="isTransmitterMode"
        android:title="Monitor Mode"
        android:summaryOn="Transmitter"
        android:summaryOff="Receiver"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="Mumble">

        <com.moreharts.babymonitor.preferences.ServerSelectionDialogPreference
            android:key="mumbleHostSettings"
            android:title="Server"
            android:summary="Host"
            android:dialogTitle="Server"
            android:persistent="false" />

        <EditTextPreference
            android:key="mumbleUser"
            android:title="Username"
            android:summary="Mumble username"
            android:dialogTitle="Mumble username" />

        <EditTextPreference
            android:key="mumbleChannel"
            android:title="Channel"
            android:summary="Join X on connect"
            android:dialogTitle="Mumble Channel" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Connection"
        android:key="connection">

        <SwitchPreference
            android:key="runOnBoot"
            android:title="@string/pref_runOnStartup"
            android:summaryOn="@string/pref_runOnStartupOn_summary"
            android:summaryOff="@string/pref_runOnStartupOff_summary"
            android:defaultValue="true" />

        <!-- TODO: This could be a setting that allows "None," "Notification only," or "All?" -->
        <SwitchPreference
            android:key="allowCellular"
            android:title="Data Usage"
            android:summaryOn="Cellular data allowed"
            android:summaryOff="Wifi Only"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Notifications">

        <SwitchPreference
            android:key="vibrationOn"
            android:title="Vibrate"
            android:summaryOn="Vibrate on noise"
            android:summaryOff="No vibration on noise"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="ledOn"
            android:title="LED"
            android:summaryOn="Blink LED on noise"
            android:summaryOff="No LED on noise"
            android:defaultValue="true" />

        <SwitchPreference
            android:key="soundOn"
            android:title="Notification Sound Override"
            android:summaryOn="Play notification sound on noise"
            android:summaryOff="Play detected audio"
            android:defaultValue="false">
                <intent android:action="android.intent.action.RINGTONE_PICKER">
                    <extra android:name="android.intent.extra.ringtone.TYPE" android:value="2" />
                    <!--<extra android:name="android.intent.extra.ringtone.TITLE" android:value="" />-->
                </intent>
            <!--
            Intent intent = new Intent(RingtoneManager.ACTION_RINGTONE_PICKER);
            intent.putExtra(RingtoneManager.EXTRA_RINGTONE_TYPE, RingtoneManager.TYPE_NOTIFICATION);
            intent.putExtra(RingtoneManager.EXTRA_RINGTONE_TITLE, "Select Tone");
            intent.putExtra(RingtoneManager.EXTRA_RINGTONE_EXISTING_URI, (Uri) null);
            this.startActivityForResult(intent, 5);
            -->
            </SwitchPreference>

    </PreferenceCategory>

</PreferenceScreen>